---
interface Props {
  width: number;
  height: number;
}

const { width, height } = Astro.props;
---

<svg
  width={width}
  height={height}
  viewBox="0 0 200 200"
  xmlns="http://www.w3.org/2000/svg"
  id="logo"
>
  <rect width="100%" height="100%" fill="none"></rect>
  <circle
    cx="100"
    cy="100"
    r="80"
    stroke="rgb(59, 130, 246)"
    stroke-width="10"
    fill="none"></circle>
  <polygon points="100,40 110,90 100,80 90,90" fill="rgb(59, 130, 246)"
  ></polygon>
  <text
    x="100"
    y="115"
    font-family="Arial"
    font-size="24"
    fill="#333"
    text-anchor="middle"
    dominant-baseline="middle">YourTurn</text
  >
</svg>
